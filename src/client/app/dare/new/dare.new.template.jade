.canvas
  .inner-space-2
    h1
      |New Challenge
    .box-content
      .inner-space
        form.pure-form.pure-form-stacked(name="form", novalidate="")
          fieldset
            ng-form(name="form")
              label
                |Select an image for the challenge
              div
                a(class="pure-button" ng-file-select ng-model="dare.file")
                  |Select File
              label(for="name", ng-show="form.name.$valid || form.name.$pristine")
                | Name:
              label.error(for="name", ng-show="form.name.$invalid && form.name.$dirty")
                | Name is required:
              input(name="name", data-ng-model="dare.info.name", required="")
              label(for="description", ng-show="form.description.$valid || form.description.$pristine")
                | Description:
              label.error(for="description", ng-show="form.description.$invalid && form.description.$dirty")
                | Description is required:
              input(name="description", data-ng-model="dare.info.description", required="")
              label(for="pledge", ng-show="form.pledge.$valid || form.pledge.$pristine")
                | Pledge:
              label.error(for="pledge", ng-show="form.pledge.$invalid && form.pledge.$dirty")
                | Pledge is required:
              input(name="pledge", type="number", data-ng-model="dare.info.pledge", required="")
            a.pure-button.pure-button-primary.margin-top-1(data-ng-click="dare.saveDare()")
              |Create